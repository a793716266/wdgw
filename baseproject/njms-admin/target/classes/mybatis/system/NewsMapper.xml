<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="NewsMapper">
	
	<!--表名 -->
	<sql id="tableName">
		WDGW_NEWS
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		PICTURENAME,	
		NEWTITLE,	
		NEWCONTENT,	
		NEWSTYPE,	
		CREATETIME,	
		CREATEUSER,	
		REMARKS,	
		ORIGIN,	
		AUTHOR,	
		CLICKS, 
		NEWS_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{PICTURENAME},	
		#{NEWTITLE},	
		#{NEWCONTENT},	
		#{NEWSTYPE},	
		#{CREATETIME},	
		#{CREATEUSER},	
		#{REMARKS},	
		#{ORIGIN},	
		#{AUTHOR},	
		#{CLICKS},	
		#{NEWS_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			NEWS_ID = #{NEWS_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			PICTURENAME = #{PICTURENAME},
			NEWTITLE = #{NEWTITLE},
			NEWCONTENT = #{NEWCONTENT},
			NEWSTYPE = #{NEWSTYPE},
			CREATEUSER = #{CREATEUSER},
			CREATETIME = #{CREATETIME},
			REMARKS = #{REMARKS},
			ORIGIN = #{ORIGIN},
			AUTHOR = #{AUTHOR},
			CLICKS = #{CLICKS},
		NEWS_ID = NEWS_ID
		where 
		NEWS_ID = #{NEWS_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			NEWS_ID = #{NEWS_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		WHERE 1=1
			<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
				and
					NEWTITLE LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
			</if>
			<if test="pd.lastStart!= null and pd.lastStart != ''"><!-- 关键词检索 -->
				and
				<![CDATA[CREATETIME >= #{pd.lastStart}]]>
			</if>
			<if test="pd.lastEnd!= null and pd.lastEnd != ''"><!-- 关键词检索 -->
				and
				<![CDATA[CREATETIME <= #{pd.lastEnd}]]>
			</if>
			<if test="pd.type!= null and pd.type != ''"><!-- 关键词检索 -->
				and
				NEWSTYPE = #{pd.type}
			</if>
		order by CREATETIME desc
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		WHERE 1=1
			<if test="keywords!= null and keywords != ''"><!-- 关键词检索 -->
				and
					NEWTITLE LIKE CONCAT(CONCAT('%', #{keywords}),'%')
			</if>
			<if test="lastStart!= null and lastStart != ''"><!-- 关键词检索 -->
				and
				<![CDATA[CREATETIME >= #{lastStart}]]>
			</if>
			<if test="lastEnd!= null and lastEnd != ''"><!-- 关键词检索 -->
				and
				<![CDATA[CREATETIME <= #{lastEnd}]]>
			</if>
			<if test="type!= null and type != ''"><!-- 关键词检索 -->
				and
				NEWSTYPE = #{type}
			</if>
		order by CREATETIME desc
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			NEWS_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
</mapper>