<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="LeadMapper">
	
	<!--表名 -->
	<sql id="tableName">
		LEAD
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		LEAD_NAME,	
		LEAD_JOB,	
		LEAD_HEAD_IMAGE,	
		LEAD_RESUME,	
		LEAD_WORK,	
		SORT,	
		IS_DEL,	
		CREATE_BY,	
		CREATE_TIME,	
		UPDATE_BY,	
		UPDATE_TIME,	
		LEAD_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{LEAD_NAME},	
		#{LEAD_JOB},	
		#{LEAD_HEAD_IMAGE},	
		#{LEAD_RESUME},	
		#{LEAD_WORK},	
		#{SORT},	
		#{IS_DEL},	
		#{CREATE_BY},	
		#{CREATE_TIME},	
		#{UPDATE_BY},	
		#{UPDATE_TIME},	
		#{LEAD_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			LEAD_ID = #{LEAD_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			LEAD_NAME = #{LEAD_NAME},
			LEAD_JOB = #{LEAD_JOB},
			LEAD_HEAD_IMAGE = #{LEAD_HEAD_IMAGE},
			LEAD_RESUME = #{LEAD_RESUME},
			LEAD_WORK = #{LEAD_WORK},
			SORT = #{SORT},
			IS_DEL = #{IS_DEL},
			
			UPDATE_BY = #{UPDATE_BY},
			UPDATE_TIME = #{UPDATE_TIME},
		LEAD_ID = LEAD_ID
		where 
		LEAD_ID = #{LEAD_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			LEAD_ID = #{LEAD_ID}
			order by SORT
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.LEAD_JOB != null and pd.LEAD_JOB != ''">
			and
				LEAD_JOB = #{pd.LEAD_JOB}
		</if>
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					字段2 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
				-->
				)
		</if>
		<if test="pd.IS_DEL!= null and pd.IS_DEL != ''"><!-- 关键词检索 -->
			and IS_DEL = #{pd.IS_DEL}
		</if>
		order by SORT
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where is_del=#{IS_DEL} order by SORT
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			LEAD_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!--查职位  -->
	<select id="listJob" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where IS_DEL = #{IS_DEL}
		group by LEAD_JOB 
		order by SORT
	</select>
	<!-- 通过ID获取数据 -->
	<select id="findByJob" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			LEAD_JOB = #{LEAD_JOB}
			AND IS_DEL = #{IS_DEL}
			order by SORT
	</select>
</mapper>